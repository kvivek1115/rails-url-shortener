<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <div class="lead">
    <%= render 'form', url: @url %>
  </div>
</div>

<h1>Urls</h1>

<table class="table">
  <thead>
    <tr>
      <th>Original url</th>
      <th>Short url</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.original_url %></td>
        <td><%= link_to url.short_url %></td>
        <td><%= link_to 'Show', url %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
