<div class="row">
  <div class="col-md-12">
    <%= form_with(model: url, local: true) do |form| %>
      <% if url.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

          <ul>
          <% url.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-group input-group-lg">
        <%= form.text_field :original_url, class: 'form-control', placeholder: 'Original Url' %>
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
